{
  "homepage": "https://deinsoftware.github.io/cronos/",
  "name": "cronos",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.7",
    "@testing-library/user-event": "12.8.3",
    "date-to-words": "1.0.2",
    "number-to-words": "1.2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.3",
    "speak-tts": "2.0.8",
    "time-in-words": "1.1.0",
    "web-vitals": "1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "test": "react-scripts test",
    "test:c": "react-scripts test --coverage --watchAll=false --ci --findRelatedTests src/**/**.js",
    "test:cw": "react-scripts test --coverage --watchAll",
    "test:r": "open ./coverage/lcov-report/index.html",
    "test:tb": "jest-coverage-thresholds-bumper",
    "lint:l": "eslint .",
    "lint:f": "eslint . --fix",
    "prettier:c": "prettier . --check",
    "prettier:w": "prettier . --write",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "clover",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 89.12,
        "branches": 79.41,
        "functions": 82.43,
        "lines": 89.03
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.23.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.23.2",
    "gh-pages": "3.1.0",
    "husky": "6.0.0",
    "jest-coverage-thresholds-bumper": "0.0.5",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "npm run test:c",
      "npm run test:tb"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
